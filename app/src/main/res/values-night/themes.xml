<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Chủ đề cho ứng dụng ở chế độ tối -->
    <style name="Theme.MoneyManagementApp" parent="Theme.MaterialComponents.DayNight">
        <!-- Màu chính của thương hiệu cho chế độ tối. -->
        <item name="colorPrimary">@color/purple_200</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Màu phụ của thương hiệu cho chế độ tối. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Màu thanh trạng thái. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Tùy chỉnh chủ đề của bạn ở đây. -->

        <!-- Đảm bảo màu nền là một màu tối trong chế độ tối -->
        <item name="android:colorBackground">@android:color/black</item>
        <!-- Đảm bảo màu chữ chính là trắng trong chế độ tối để tương phản -->
        <item name="android:textColorPrimary">@android:color/white</item>
    </style>
</resources>
