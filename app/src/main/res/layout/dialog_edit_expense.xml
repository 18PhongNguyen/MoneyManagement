<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <EditText
        android:id="@+id/et_edit_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Mô tả"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">
        <EditText
            android:id="@+id/et_edit_amount"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="Số tiền"
            android:inputType="numberDecimal"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="VND"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginStart="8dp"/>
    </LinearLayout>

    <RadioGroup
        android:id="@+id/rg_edit_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp">
        <RadioButton
            android:id="@+id/rb_edit_income"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Thu nhập"
            android:layout_weight="1"/>
        <RadioButton
            android:id="@+id/rb_edit_expense"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Chi tiêu"
            android:layout_weight="1"/>
    </RadioGroup>

    <Spinner
        android:id="@+id/spinner_edit_category"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:minHeight="48dp"/>
    <EditText
        android:id="@+id/et_edit_custom_category"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Hoặc nhập danh mục mới"
        android:visibility="gone" />

</LinearLayout>
